@using YourStory.BusinessLayer
@using YourStory.DataAccessLayer
@using YourStory.Entities

@{
    ViewBag.Title = "Anasayfa";
    Layout = "~/Views/Shared/_LayoutTemel.cshtml";
}
@*Kategoriler*@

    <div class="col-md-3 my-5" style="margin-top: 1.5rem; ">
        @Html.Partial("_PartialCategories")
    </div>


@{
    StoryManager story = new StoryManager();
    List<Story> list = story.GetAllNote();
}
<div class="col-md-9 my-2" style="margin-top:2rem;">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/Resimler/1resim.png" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Resimler/2resim.png" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Resimler/3resim.png" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>


    <div class="row my-3">
            @Html.Partial("_PartialStorys");
    </div>

</div>

